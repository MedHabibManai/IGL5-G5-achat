# Terraform Variables - Example Configuration
# Copy this file to terraform.tfvars and customize for your environment
# DO NOT commit terraform.tfvars to Git (it may contain sensitive data)

# ============================================================================
# General Configuration
# ============================================================================

project_name = "achat-app"
environment  = "sandbox"
aws_region   = "us-east-1"

# ============================================================================
# Network Configuration
# ============================================================================

vpc_cidr           = "10.0.0.0/16"
public_subnet_cidr = "10.0.1.0/24"
availability_zone  = "us-east-1a"  # Leave empty to use first available AZ

# ============================================================================
# EC2 Configuration
# ============================================================================

instance_type     = "t2.micro"  # Free tier eligible
root_volume_size  = 20          # GB
key_name          = ""          # Leave empty if no SSH access needed
                                # Or specify your key pair name: "my-keypair"

# ============================================================================
# Application Configuration
# ============================================================================

app_name      = "achat"
app_port      = 8080
docker_image  = "rayenslouma/achat-app:latest"
docker_username = "rayenslouma"

# ============================================================================
# Security Configuration
# ============================================================================

# SSH Access - Leave empty to disable SSH
# Examples:
#   allowed_ssh_cidr = []                    # No SSH access (use SSM instead)
#   allowed_ssh_cidr = ["1.2.3.4/32"]       # Only from specific IP
#   allowed_ssh_cidr = ["0.0.0.0/0"]        # From anywhere (NOT RECOMMENDED)
allowed_ssh_cidr = []

# HTTP Access to Application
# Examples:
#   allowed_http_cidr = ["0.0.0.0/0"]       # From anywhere (public app)
#   allowed_http_cidr = ["1.2.3.4/32"]      # Only from specific IP
allowed_http_cidr = ["0.0.0.0/0"]

# ============================================================================
# Feature Flags
# ============================================================================

enable_monitoring   = false  # CloudWatch detailed monitoring (costs extra)
enable_auto_scaling = false  # Auto-scaling group (future feature)
create_rds          = false  # RDS MySQL database (future feature)

# ============================================================================
# Tags
# ============================================================================

common_tags = {
  Project     = "achat-app"
  Environment = "sandbox"
  ManagedBy   = "Terraform"
  Owner       = "DevOps-Team"
  Course      = "CloudFormation"
}

